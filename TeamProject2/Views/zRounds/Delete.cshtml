@model TeamProject2.zRound

@{
    ViewBag.Title = "Delete Round";
}

<h2>Delete Round @Model.RoundNo</h2>

<h3>Are you sure you want to delete Round @Model.RoundNo?</h3>
<fieldset>
    <legend>zRound</legend>

    <div class="display-label">Start Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>

    <div class="display-label">End Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.EndDate)</div>

    <div class="display-label">zRequest</div>
    <div class="display-field">
        @if(Model.zRequest.Count == 0){
            <text>None</text>
        }
        else{
            @(Model.zRequest.Count == 1 ? "1 Request" : Model.zRequest.Count.ToString() + " Requests")
        }
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


