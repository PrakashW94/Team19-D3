    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr") this still hasn't been included... 
    don't know what it does
    *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @*
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    *@
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Loughborough Timetabling System", "Index", "Home")</p>
            </div>
            <div class="float-right">
                
               <div id="Identity">
                 @Html.Encode(User.Identity.Name)
                   </div>

                <nav>
                    <ul id="menu">
                        @if (Request.IsAuthenticated)
                        {
                           
                            //if (@Html.Encode(User.Identity.Name)=="CA")
                            //{
                                  <li>@Html.ActionLink("Make a Request", "Index", "zRequests")</li>
                                  <li>@Html.ActionLink("View Timetable", "Index", "Timetable")</li>
                                  <li> <a href="#">Manage Stored Data</a>
                                   
                                 <ul id="submenu" class="nested">
                                   <li>@Html.ActionLink("View Rooms", "Index", "zRooms")</li>
                                    <li>@Html.ActionLink("View Facilities", "Index", "zFacilities") </li>
                                     <li>@Html.ActionLink("View Rounds", "Index", "zRounds")</li>
                                     <li>@Html.ActionLink("Manage Programmes", "Index", "zProgrammes")</li>
                                     <li>@Html.ActionLink("Manage Lecturers", "Index", "zLecturers")</li>


                                 </ul>
                                      
                                  </li>
                                 <li> @Html.ActionLink("Log out", "Logout", "User")
                   </li>
                        }
                        else
                        {
                            <li><strong>Please log in</strong></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Loughborough Timetabling System</p>
            </div>
        </div>
    </footer>
    
</body>


</html>
