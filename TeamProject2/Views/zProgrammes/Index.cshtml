@model IEnumerable<TeamProject2.zProgramme>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="keywords">
    <thead>
        <tr>
            <th></th>
            <th>
                Programme Code
            </th>
            <th>
                Programme Title
            </th>
            <th>
                Department Code
            </th>
            <th>
                Associated Module
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ProgrammeCode }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ProgrammeCode }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ProgrammeCode })
                </td>
                <td>
                      @item.DeptCode@{if(item.GradType){<text>U</text>} else {<text>PT</text>}}@if (item.ProgramType){<text>B</text>} else {<text>M</text>}@if (@item.ProgrammeCode < 10){<text>0</text>}@item.ProgrammeCode
                </td>
                <td>
			        @item.ProgrammeTitle
                </td>
                <td>
			        @item.zDepartment.DeptCode - @item.zDepartment.DeptName
                </td>
                <td>
			        @(item.zModule == null ? "None" : item.zModule.Count.ToString())
                </td>
            </tr>
        }
    </tbody>

</table>


