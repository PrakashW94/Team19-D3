@model TeamProject2.zRoom

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>zRoom</legend>

    <div class="display-label">Capacity</div>
    <div class="display-field">@Model.Capacity</div>

    <div class="display-label">BuildingCode</div>
    <div class="display-field">@Model.BuildingCode</div>

    <div class="display-label">ImgLink</div>
    <div class="display-field">@Model.ImgLink</div>

    <div class="display-label">Private</div>
    <div class="display-field">@Model.Private</div>

    <div class="display-label">zBuilding</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zBuilding).ToString()</div>

    <div class="display-label">zFacility</div>
    <div class="display-field">@(Model.zFacility == null ? "None" : Model.zFacility.Count.ToString())</div>

    <div class="display-label">zDepartment</div>
    <div class="display-field">@(Model.zDepartment == null ? "None" : Model.zDepartment.Count.ToString())</div>

    <div class="display-label">zRequest</div>
    <div class="display-field">@(Model.zRequest == null ? "None" : Model.zRequest.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


