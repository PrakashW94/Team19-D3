    <div class="display-label">Week 16</div>
    <div class="display-field">@Model.Week16</div>

    <div class="display-label">Number of Requests</div>
    <div class="display-field">
        @if(Model.zRequest.Count == 0){
            <text>None</text>
        }
        else{
            @(Model.zRequest.Count == 1 ? "1 Request" : Model.zRequest.Count.ToString() + " Requests")
        }
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit Week Set", "Edit", new { id=Model.WeekId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


