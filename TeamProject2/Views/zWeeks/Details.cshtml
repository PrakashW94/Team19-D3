@model TeamProject2.zWeek

@{
    ViewBag.Title = "Week Set Details";
}

<h2>Week Set @Model.WeekId Details</h2>

<fieldset>
    <legend>zWeek</legend>

    <div class="display-label">Week 1</div>
    <div class="display-field">@Model.Week1</div>

    <div class="display-label">Week 2</div>
    <div class="display-field">@Model.Week2</div>

    <div class="display-label">Week 3</div>
    <div class="display-field">@Model.Week3</div>

    <div class="display-label">Week 4</div>
    <div class="display-field">@Model.Week4</div>

    <div class="display-label">Week 5</div>
    <div class="display-field">@Model.Week5</div>

    <div class="display-label">Week 6</div>
    <div class="display-field">@Model.Week6</div>

    <div class="display-label">Week 7</div>
    <div class="display-field">@Model.Week7</div>

    <div class="display-label">Week 8</div>
    <div class="display-field">@Model.Week8</div>

    <div class="display-label">Week 9</div>
