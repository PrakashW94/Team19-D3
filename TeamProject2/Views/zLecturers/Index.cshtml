@model IEnumerable<TeamProject2.zLecturer>

@{
    ViewBag.Title = "Lecturers";
}

<h2>Lecturers</h2>

<p>
    @Html.ActionLink("Add New Lecturer", "Create")
</p>
<table id="keywords">
    <thead>
        <tr>
            <th></th>
            <th>
                Lecturer Name
            </th>
            <th>
                Associated Module
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.LecturerId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.LecturerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.LecturerId })
                </td>
                <td>
			        @item.LecturerName
                </td>
                <td>
			        @(item.zModule == null ? "None" : item.zModule.Count.ToString())
                </td>
            </tr>
        }
    </tbody>
</table>


