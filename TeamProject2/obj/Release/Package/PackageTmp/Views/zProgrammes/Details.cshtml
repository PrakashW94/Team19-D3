@model TeamProject2.zProgramme

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>zProgramme</legend>

    <div class="display-label">ProgrammeTitle</div>
    <div class="display-field">@Model.ProgrammeTitle</div>

    <div class="display-label">DeptCode</div>
    <div class="display-field">@Model.DeptCode</div>

    <div class="display-label">zDepartment</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zDepartment).ToString()</div>

    <div class="display-label">zModule</div>
    <div class="display-field">@(Model.zModule == null ? "None" : Model.zModule.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ProgrammeCode }) |
    @Html.ActionLink("Back to List", "Index")
</p>


