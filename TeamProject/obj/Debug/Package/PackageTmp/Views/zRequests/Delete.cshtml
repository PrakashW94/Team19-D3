@model TeamProject.zRequest

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>zRequest</legend>

    <div class="display-label">ModCode</div>
    <div class="display-field">@Model.ModCode</div>

    <div class="display-label">StatusId</div>
    <div class="display-field">@Model.StatusId</div>

    <div class="display-label">WeekId</div>
    <div class="display-field">@Model.WeekId</div>

    <div class="display-label">DayId</div>
    <div class="display-field">@Model.DayId</div>

    <div class="display-label">PeriodId</div>
    <div class="display-field">@Model.PeriodId</div>

    <div class="display-label">SessionLength</div>
    <div class="display-field">@Model.SessionLength</div>

    <div class="display-label">Semester</div>
    <div class="display-field">@Model.Semester</div>

    <div class="display-label">RoundNo</div>
    <div class="display-field">@Model.RoundNo</div>

    <div class="display-label">SpecialRequirement</div>
    <div class="display-field">@Model.SpecialRequirement</div>

    <div class="display-label">zDay</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zDay).ToString()</div>

    <div class="display-label">zPeriod</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zPeriod).ToString()</div>

    <div class="display-label">zRound</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zRound).ToString()</div>

    <div class="display-label">zStatus</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zStatus).ToString()</div>

    <div class="display-label">zWeek</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.zWeek).ToString()</div>

    <div class="display-label">zFacility</div>
    <div class="display-field">@(Model.zFacility == null ? "None" : Model.zFacility.Count.ToString())</div>

    <div class="display-label">zRoom</div>
    <div class="display-field">@(Model.zRoom == null ? "None" : Model.zRoom.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


